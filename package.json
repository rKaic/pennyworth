{
  "name": "pennyworth",
  "version": "1.0.0",
  "description": "Modular Discord and Slack Bot",
  "main": "./dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon ./src/app.ts",
    "build": "tsc --project tsconfig.json && copyfiles -f ./src/data/* ./dist/data",
    "type:check": "tsc --noEmit --project tsconfig.json",
    "type:watch": "tsc --watch --noEmit --project tsconfig.json",
    "postinstall": "yarn build",
    "production": "yarn pm2:production && yarn pm2:logs",
    "pm2:production": "pm2 start --env production",
    "pm2:logs": "pm2 logs -n pennyworth --raw"
  },
  "author": "https://github.com/rKaic",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.277.0",
    "@slack/bolt": "^3.12.2",
    "discord.io": "github:woor/discord.io#gateway_v6",
    "events": "^3.3.0",
    "glob": "^7.1.2",
    "google-images": "^2.1.0",
    "jsdom": "^21.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "mongodb": "^4.13.0",
    "node-fetch": "2.6.7",
    "octokit": "^2.0.11",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "requirejs": "^2.3.6",
    "tsc": "^2.0.4",
    "typesync": "^0.9.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/glob": "^8.0.1",
    "@types/google-images": "^2.1.1",
    "@types/jsdom": "^20.0.1",
    "@types/lodash": "^4.14.191",
    "@types/nedb": "^1.8.12",
    "@types/node-fetch": "^3.0.3",
    "@types/nodemon": "^1.19.2",
    "@types/request": "^2.48.8",
    "@types/request-promise-native": "^1.0.18",
    "@types/requirejs": "^2.1.34",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
